/**index.wxss**/
.item-wrap {
    display: flex;
    position: relative;
    padding: 30rpx;
}

.item-wrap::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 20rpx;
    right: 20rpx;
    height: 0;
    border-bottom: 1rpx solid rgba(10, 10, 10, .1);
}

.title {
    flex: 1;
    padding-right: 20rpx;
    font-size: 30rpx;
    font-weight: bold;
    color: #333;
}

.images {
    width: 160rpx;
    height: 120rpx;
    background: #ccc;
}

.swiper {
    height: 340rpx
}

.slide-image {
    width: 100%;
    background: #ccc;
}

.topstories-title {
    position: absolute;
    bottom: 30rpx;
    padding: 0 30rpx 30rpx;
    font-size: 40rpx;
    color: #fff;
    line-height: 1.3;
    text-shadow: 0 1px 3px rgba(0,0,0,.4), 0 0 10px rgba(0,0,0,.075);
}