/* pages/article/article.wxss */
@import "/wxParse/wxParse.wxss";

.head {
    position: relative;
}

.title {
    padding: 0 30rpx 60rpx;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    color: #fff;
    font-size: 36rpx;
    font-weight: bold;
    line-height: 1.6;
}

.image-source {
    position: absolute;
    bottom: 20rpx;
    right: 20rpx;
    font-size: 20rpx;
    color: rgba(255, 255, 255, .5)
}

.image {
    width: 100%;
    height: 320rpx;
    background: #ccc;
}

.article {
    padding: 20rpx 30rpx;
    font-size: 32rpx;
}

.answer {
    margin-bottom: 40rpx;
    border-bottom: 4rpx solid #eee;
}

.headline {
    display: none;
}

.content {
  color: #444;
  line-height: 1.7;
  font-size: 17px;
  margin: 10px 0 20px;
}

.wxParse-p {
    margin-bottom: 30rpx;
}

.content-image {
    width: 100% !important;
}

.meta {
    margin-bottom: 30rpx;
    font-size: 28rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.avatar {
    position: relative;
    top: 4rpx;
    border-radius: 6rpx;
    width: 32rpx !important;
    height: 32rpx;
    margin-right: 10rpx;
}

.author {
  color: #333;
  font-weight: 700;
}

.bio {
    color: #b8b8b8;
}

.question-title {
  line-height: 1.5;
  font-weight: 700;
  font-size: 36rpx;
  margin: 20rpx 0;
  color: #333;
}

.view-more {
    display: none;
}

.wxParse-iframe {
    display: none;
}

.wxParse-blockquote {
    background: none;
    padding: 0 0 0 1em;
    margin-bottom: 20rpx;
    font-family: 'Helvetica Neue', Helvetica, Arial, Sans-serif;
    color: #9da3a6;
    border-left: 3px solid #Dfe3e6;
}

.night.image {
  -webkit-mask-image: -webkit-gradient(linear, 0 0, 0 100%, from(rgba(0, 0, 0, 0.7)), to(rgba(0, 0, 0, 0.7)));
}
body.night, .night.content-wrap {
  background: #343434;
}
.night.answer {
  border-top: 2px solid #303030;
}
.night.question {
  border-top: 4px solid #303030;
}
.night.view-more {
  background: #292929;
  color: #666;
}